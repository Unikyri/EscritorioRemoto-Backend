# Configuración del Servidor Backend - Escritorio Remoto
# Copiar a config.env y modificar según el entorno

# Configuración del Servidor
SERVER_HOST=localhost
SERVER_PORT=8080
SERVER_ENV=development

# Configuración de Base de Datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=escritorio_remoto_db
DB_USER=app_user
DB_PASSWORD=app_password
DB_MAX_CONNECTIONS=20
DB_MAX_IDLE_CONNECTIONS=10

# Configuración de Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Configuración de Seguridad
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui_cambiar_en_produccion
BCRYPT_COST=10

# Configuración de WebSocket
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024
WS_CHECK_ORIGIN=false

# Configuración de Archivos
FILE_UPLOAD_MAX_SIZE=100MB
FILE_STORAGE_PATH=./storage/files
VIDEO_STORAGE_PATH=./storage/videos

# Configuración de Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=100MB
LOG_MAX_BACKUPS=5

# URLs de Frontend (CORS)
ADMIN_WEB_URL=http://localhost:3000
CLIENT_APP_ALLOWED_ORIGINS=* 